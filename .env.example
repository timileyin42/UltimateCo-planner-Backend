# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Plan et al - Ultimate Co-planner

# Environment
ENVIRONMENT=development
DEBUG=true

# CORS Configuration
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:3001

# Database Configuration
DATABASE_URL=sqlite:///./planetal.db
ASYNC_DATABASE_URL=sqlite+aiosqlite:///./planetal.db

# For PostgreSQL (uncomment and modify if using PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/planetal
# ASYNC_DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/planetal

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (Resend)
RESEND_API_KEY=your-resend-api-key
EMAILS_FROM_EMAIL=noreply@planetal.com
EMAILS_FROM_NAME=Plan et al
SUPPORT_EMAIL=support@planetal.com

# Frontend URL for email links
FRONTEND_URL=http://localhost:3000

# Legacy Email Configuration (backup)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,txt,mp4,mov,avi

# External API Keys
# OpenAI API for AI features
OPENAI_API_KEY=your-openai-api-key

# Google Maps API for location features
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# SMS Configuration - Termii
TERMII_API_KEY=your-termii-api-key
TERMII_SENDER_ID=your-termii-sender-id
TERMII_BASE_URL=

# Push Notifications - Firebase Cloud Messaging
FIREBASE_CREDENTIALS_PATH=path/to/firebase-service-account.json
FIREBASE_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project-id","private_key_id":"your-key-id","private_key":"-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n","client_email":"firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com","client_id":"your-client-id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project-id.iam.gserviceaccount.com"}

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Calendar Integration Configuration
# Google Calendar API
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:8000/api/v1/calendar/google/callback

# Apple Calendar (CalDAV) - iCloud
APPLE_CALENDAR_SERVER_URL=https://caldav.icloud.com
APPLE_CALENDAR_PRINCIPAL_URL=https://caldav.icloud.com/{user_id}/principal/

# Calendar Sync Settings
CALENDAR_SYNC_FREQUENCY_MINUTES=15
CALENDAR_SYNC_MAX_RETRIES=3
CALENDAR_WEBHOOK_BASE_URL=http://localhost:8000/api/v1/calendar/webhooks

# Music Integration - Spotify (Works on all devices including iPhone/Apple)
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/spotify/callback

# File Storage - Google Cloud Storage
GCP_PROJECT_ID=your-gcp-project-id
GCP_STORAGE_BUCKET=your-gcs-bucket-name
GCP_STORAGE_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Real-time Features
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# WebSocket Settings
WEBSOCKET_ORIGINS=http://localhost:3000,https://yourdomain.com
MAX_WEBSOCKET_CONNECTIONS=1000

# Social Authentication (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/planetal.log

# Timezone
DEFAULT_TIMEZONE=UTC

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# WebSocket Configuration
WEBSOCKET_ENABLED=true

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_SOCIAL_AUTH=false
ENABLE_FILE_UPLOADS=true
ENABLE_NOTIFICATIONS=true
ENABLE_BACKGROUND_TASKS=true

# Testing
TEST_DATABASE_URL=sqlite:///./test_planetal.db

# Development
RELOAD=true
HOST=0.0.0.0
PORT=8000